<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ФИО клиента:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/clientNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:hint="Введите ФИО"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/clientEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:hint="client@example.com"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Телефон:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/clientPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:inputType="phone"
        android:hint="+7 (999) 123-45-67"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Скидка (%):"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/clientDiscountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:inputType="number"
        android:hint="0"
        android:textColor="#000000"
        android:textColorHint="#757575" />

</LinearLayout>