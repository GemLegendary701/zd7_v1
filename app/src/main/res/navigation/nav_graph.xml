<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.zd7_v1.ui.login.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_tourListFragment"
            app:destination="@id/tourListFragment" />

    </fragment>

    <fragment
        android:id="@+id/tourListFragment"
        android:name="com.example.zd7_v1.ui.tourlist.TourListFragment"
        android:label="Туры"
        tools:layout="@layout/fragment_tour_list">

        <action
            android:id="@+id/action_tourListFragment_to_tourDetailFragment"
            app:destination="@id/tourDetailFragment" />

        <action
            android:id="@+id/action_tourListFragment_to_clientListFragment"
            app:destination="@id/clientListFragment" />

        <action
            android:id="@+id/action_tourListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/tourDetailFragment"
        android:name="com.example.zd7_v1.ui.tourdetail.TourDetailFragment"
        android:label="Детали тура"
        tools:layout="@layout/fragment_tour_detail">

        <action
            android:id="@+id/action_tourDetailFragment_to_clientListFragment"
            app:destination="@id/clientListFragment" />

        <action
            android:id="@+id/action_tourDetailFragment_to_clientDetailFragment"
            app:destination="@id/clientDetailFragment" />

        <action
            android:id="@+id/action_tourDetailFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/clientListFragment"
        android:name="com.example.zd7_v1.ui.clientlist.ClientListFragment"
        android:label="Клиенты"
        tools:layout="@layout/fragment_client_list">

        <action
            android:id="@+id/action_clientListFragment_to_clientDetailFragment"
            app:destination="@id/clientDetailFragment" />

        <action
            android:id="@+id/action_clientListFragment_to_tourListFragment"
            app:destination="@id/tourListFragment" />

        <action
            android:id="@+id/action_clientListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_clientListFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/clientDetailFragment"
        android:name="com.example.zd7_v1.ui.clientdetail.ClientDetailFragment"
        android:label="Профиль клиента"
        tools:layout="@layout/fragment_client_detail">

        <action
            android:id="@+id/action_clientDetailFragment_to_tourListFragment"
            app:destination="@id/tourListFragment" />

        <action
            android:id="@+id/action_clientDetailFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.example.zd7_v1.ui.orderdetail.OrderDetailFragment"
        android:label="Детали заказа"
        tools:layout="@layout/fragment_order_detail">

        <action
            android:id="@+id/action_orderDetailFragment_to_clientDetailFragment"
            app:destination="@id/clientDetailFragment" />

        <action
            android:id="@+id/action_orderDetailFragment_to_tourDetailFragment"
            app:destination="@id/tourDetailFragment" />

    </fragment>

</navigation>